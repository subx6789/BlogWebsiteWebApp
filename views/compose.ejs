<%- include('partials/header'); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
<div class="mb-3">
    <label class="form-label">Title</label>
    <input class="form-control" type="text" name="postTitle" autocomplete="off" autofocus>
  </div>
  <div class="mb-3">
    <label class="form-label">Post</label>
    <textarea class="form-control" name="postBody" cols="30" rows="10" autocomplete="off"></textarea>
    <script>
      CKEDITOR.replace( 'postBody' );
</script>
  </div>
    <button class="btn btn-primary btn-block" type="submit" name="button">Publish</button>
</form>
<%- include('partials/footer'); -%>